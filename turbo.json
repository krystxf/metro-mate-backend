{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env"],
    "experimentalUI": true,
    "pipeline": {
        "build": {
            "outputs": [".next/**", "!.next/cache/**", "^build"],
            "cache": true
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "//#format:swift": {
            "cache": true,
            "inputs": ["**/**.swift"]
        },
        "//#format:prettier": {
            "cache": true,
            "inputs": ["!app/**", "!**/node_modules/**"]
        },
        "//#format:swift:check": {
            "cache": true,
            "inputs": ["**/**.swift"]
        },
        "//#format:prettier:check": {
            "cache": true,
            "inputs": ["!app/**", "!**/node_modules/**"]
        },
        "format": {
            "dependsOn": ["//#format:swift", "//#format:prettier"],
            "cache": true
        },
        "format:check": {
            "dependsOn": ["//#format:swift:check", "//#format:prettier:check"],
            "cache": true
        },
        "precommit": {
            "dependsOn": ["format", "build", "typecheck"]
        },
        "typecheck": {}
    }
}
